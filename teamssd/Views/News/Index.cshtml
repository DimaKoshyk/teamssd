@model IEnumerable<teamssd.Data.Entities.News>

@{
    ViewBag.Title = "Новини";
}

<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">Новини</h3>
    </div>
    <div class="panel-body">
        <table class="table">
            <tr class="info">
                <th>
                    Тип каналу
                </th>
                <th>
                    Назва
                </th>
                <th>
                    Текст
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Chanel.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Text)
                    </td>
                    <td>
                        @Html.ActionLink("Редагування", "Edit", new { id=item.Id }) |
                        @Html.ActionLink("Деталі", "Details", new { id=item.Id }) |
                        @Html.ActionLink("Видалення", "Delete", new { id=item.Id })
                    </td>
                </tr>
            }

        </table>
        <p>
            @Html.ActionLink("Створити", "Create", null, new { @class = "btn btn-raised btn-success pull-right" })
        </p>
    </div>
</div>
